{
  "name": "cortina-react",
  "version": "0.3.0",
  "description": "Coroutine-based EDSL for building React components and applications",
  "author": "Arthur Xavier <arthur.xavierx@gmail.com> (http://arthur-xavier.github.io/)",
  "license": "MIT",
  "main": "build/index.js",
  "module": "src/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "test": "jest --env=jsdom --config=./jest.config.js --watch",
    "test:coverage": "jest --env=jsdom --config=./jest.config.js --coverage",
    "format": "prettier --write '{src,test}/**/*.js'",
    "lint": "eslint --fix --config .eslintrc src/",
    "precommit": "npm run format && git add . && npm run lint && npm run test:coverage"
  },
  "files": [
    "build/",
    "src/",
    "LICENSE"
  ],
  "keywords": [
    "coroutine",
    "generator",
    "iterator",
    "asynchronous",
    "async",
    "dsl",
    "edsl",
    "react",
    "component"
  ],
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "babel-eslint": "7.2.3",
    "babel-loader": "^8.2.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-runtime": "^6.26.0",
    "cortina": "github:ditointernet/cortina",
    "eslint": "4.10.0",
    "husky": "^0.14.3",
    "jest": "^27.5.1",
    "prettier": "^1.11.1",
    "react": "^16.3.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "engines": {
    "node": ">= 7"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.2"
  }
}
